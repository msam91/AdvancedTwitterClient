<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/ivProImage"
            android:src="@drawable/ic_launcher"
            android:background="#3B94D9"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="New Text"
            android:id="@+id/tvProUserName"
            android:textColor="#292f33"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvProScreenName"
            android:textColor="#8899a6"
            android:layout_marginLeft="3dp"
            android:textSize="18dp"/>

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/tvProStatus"
        android:layout_below="@+id/linearLayout6"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout7"
        android:orientation="horizontal"
        android:layout_below="@+id/tvProStatus"
        android:layout_marginTop="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:id="@+id/tvProFollowersLable"
        android:textColor="#333"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="followers"
        android:id="@+id/tvProFollowers"
        android:layout_toRightOf="@+id/tvProFollowersLable"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following"
        android:id="@+id/tvProFollowingLable"
        android:layout_toRightOf="@+id/tvProFollowers"
        android:layout_marginLeft="10dp"
        android:textColor="#333"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="following"
        android:id="@+id/tvProFollowing"
        android:layout_toRightOf="@+id/tvProFollowingLable"
        android:layout_marginLeft="5dp" />

    </LinearLayout>


</RelativeLayout>